{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/std:c++20",
                "/WX",
                "/I",
                "${workspaceFolder}\\thrid_party\\boost\\includes",
                "/I",
                "${workspaceFolder}\\thrid_party\\gtest\\includes",
                "/I",
                "${workspaceFolder}\\include",
                //"${workspaceFolder}\\thrid_party\\*.hpp",
                

                "/Fe:",
                "${workspaceFolder}\\out\\${fileBasenameNoExtension}-unittest.exe",

                "${workspaceFolder}\\thrid_party\\gtest\\lib\\gtest.lib",
                "${workspaceFolder}\\thrid_party\\gtest\\lib\\gtest_main.lib",
                "${workspaceFolder}\\src\\${fileBasenameNoExtension}.cpp",
                "${workspaceFolder}\\src\\${fileBasenameNoExtension}-unittest.cpp",
                "${workspaceFolder}\\src\\unittest_entry.cpp",

            ],
            
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type":"shell",
            "label": "Clean up",
            "command":"del",
            "args": ["${workspaceFolder}\\out\\*.ilk","${workspaceFolder}\\src\\*.obj"],
            "dependsOn":["build file"]
        },


       
        
    ],
    
    "version": "2.0.0"
}